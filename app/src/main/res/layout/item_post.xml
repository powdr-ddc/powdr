<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <RelativeLayout
    android:id="@+id/post_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
      android:id="@+id/post_user_pic"
      android:layout_width="45dp"
      android:layout_height="45dp"
      android:adjustViewBounds="true"
      android:scaleType="fitCenter"
      android:src="@drawable/ic_user"/>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginStart="@dimen/half_margin"
      android:layout_toEndOf="@id/post_user_pic"
      android:orientation="vertical"
      >

      <TextView
        android:id="@+id/post_user_name"
        android:layout_width="wrap_content"
        tools:text="Kanye West"
        android:textSize="@dimen/header_text_size"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content"/>

      <TextView
        android:id="@+id/post_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/timestamp_text_size"
        android:textColor="@color/colorPrimary"
        tools:text="11 hrs"/>

    </LinearLayout>

  </RelativeLayout>

  <TextView
    android:id="@+id/post_body"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/half_margin"
    android:layout_below="@id/post_user"
    android:textColor="@color/black"
    android:textSize="@dimen/body_text_size"
    tools:text="Blah blah blah, snowboard snowboard snowboard lol i can't believe you ski, that's so gross"/>

  <ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/post_body"
    android:layout_marginTop="@dimen/half_margin"
    android:adjustViewBounds="true"
    android:scaleType="fitCenter"
    android:src="@drawable/jonah"/>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  </RelativeLayout>

</RelativeLayout>