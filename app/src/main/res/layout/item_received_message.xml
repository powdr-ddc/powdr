<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="@dimen/half_static_spacing"
  app:cardBackgroundColor="@color/colorSecondary"
  app:cardCornerRadius="@dimen/post_corner_radius"
  android:layout_gravity="start">

  <ImageView
    android:id="@+id/message_pic"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@drawable/ic_user"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>

  <androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/half_margin"
    app:cardBackgroundColor="@color/colorSecondary"
    app:cardCornerRadius="@dimen/post_corner_radius"
    app:layout_constraintStart_toEndOf="@id/message_pic"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

  <TextView
    android:id="@+id/received_body"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/half_margin"
    android:textSize="@dimen/body_text_size"
    android:textColor="@color/white"
    android:maxWidth="200dp"
    android:minLines="1"
    android:maxLines="10"
    tools:text="bla bla bla snowboard snowboard yeet bla bla bla"/>

  </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>